	</servlet>
	<servlet>
		<servlet-name>ModifierEvent</servlet-name>
		<servlet-class>hei.controllers.ModifierEventServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AjouterAsso</servlet-name>
		<servlet-class>hei.controllers.AjouterAssoServlet</servlet-class>
